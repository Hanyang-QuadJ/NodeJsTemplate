<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            강사관리
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content" ng-controller="adminTeacherManageController as vm">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">

                    <div class="box-header with-border">
                        <h3 class="box-title">강사 등록</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-wrench"></i></button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Separated link</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <form ng-submit="vm.addTeacher()">
                        <div class="box-body">
                            <div class="col-md-12">
                                <!-- Date -->
                                <div class="form-group">
                                    <label>ID:</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" ng-model = "vm.teacherToAdd.id" class="form-control pull-right" id="datepicker" placeholder="여기를 클릭하세요">
                                    </div>
                                    <!-- /.input group -->
                                </div>
                                <!--Name-->
                                <label>강사 이름:</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-file-text"></i></span>
                                    <input type="text" ng-model = "vm.teacherToAdd.name" class="form-control" placeholder="이름을 입력하세요">
                                </div>
                                <br>
                                <label>강사 학력:</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-bars"></i></span>
                                    <input type="text" ng-model = "vm.teacherToAdd.career" class="form-control" placeholder="학년을 입력하세요">
                                </div>
                                <br>
                                <label>강사 H.P:</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-book"></i></span>
                                    <input type="text" ng-model="vm.teacherToAdd.phone" class="form-control" placeholder="학교를 입력하세요">
                                </div>
                                <br>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <div class="box-footer text-center">
                            <button type="submit" class="btn btn-primary">등록</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">강사 목록</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-wrench"></i></button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Separated link</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <table id = "teacher" datatable="ng" class="row-border hover">
                            <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">강사 이름</th>
                                <th class="text-center">학력</th>
                                <th class="text-center">연락처</th>
                                <th class="text-center">편집</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="teacher in vm.teachers">
                                <td class="text-center" >{{ teacher.id }}</td>
                                <td class="text-center" >{{ teacher.name }}</td>
                                <td class="text-center" >{{ teacher.career }}</td>
                                <td class="text-center" >{{ teacher.phone }}</td>
                                <td class="text-center">
                                    <button type="button" ng-click="vm.modifyTeacher(teacher)" class="btn btn-warning"><i class="fa fa-edit"></i></button>
                                    <button type="button" ng-click="vm.removeTeacher(teacher)" class="btn btn-danger"><i class="fa fa-trash-o"></i></button>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">학생 퇴원</h3>
                    </div>
                    <div class="box-body">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-danger">퇴원</button>
                            </div>
                            <!-- /btn-group -->
                            <input type="text" class="form-control" placeholder="퇴원한 학생을 입력하세요">
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
