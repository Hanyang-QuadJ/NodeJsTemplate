<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><%= UID %></h1>
                <img class="img-responsive" src="img/profile.png" width="180px" height="180px" alt="">
                <div class="intro-text" ng-controller="introduceController as introduce">
                    <span class="name">{{ introduce.name }}</span><br>
                    <span class="skills"><i class="xi-cake">{{introduce.id}}</i></span><br>
                    <span class="skills"><i class="xi-school"> {{introduce.school}}</i></span><br>
                    <span class="skills"><i class="xi-pen"> {{introduce.year}}학년</i></span><br>
                </div>
            </div>
        </div>
    </div>
</header>
